<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.simplecounter.MainActivity">

    <Button
        android:id="@+id/Botonsumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/Botonacabar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="76dp"
        android:layout_above="@+id/Botonacabar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Botonrestar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/Botonsumar"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="63dp"
        android:layout_marginEnd="63dp"
        android:layout_alignBaseline="@+id/Botonsumar"
        android:layout_alignBottom="@+id/Botonsumar"
        android:layout_toLeftOf="@+id/Botonsumar"
        android:layout_toStartOf="@+id/Botonsumar" />

    <Button
        android:id="@+id/Botonacabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Finish"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Botonsumar"
        android:layout_marginLeft="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Botonsumar"
        android:layout_alignStart="@+id/Botonsumar"
        android:layout_marginBottom="97dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Botonrestar"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@+id/Botonsumar"
        android:layout_toStartOf="@+id/Botonsumar" />

</RelativeLayout>